{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "./Laravel-SAAS-Starter/artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "./Laravel-SAAS-Starter"
            }
        }
    }
}